{
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message' | trans -b :ko | xargs -I {} say \"{}\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/scripts/illuwa/validate-utf8-encoding.sh \"$(echo '$TOOL_RESULT' | jq -r '.file_path // empty')\""
          }
        ]
      }
    ]
  }
}